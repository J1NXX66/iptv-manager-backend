{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/create-customer", "dest": "/api/create-customer.js" },
    { "src": "/api/create-invoice", "dest": "/api/create-invoice.js" },
    { "src": "/webhook", "dest": "/api/webhook.js" }
  ]
}

